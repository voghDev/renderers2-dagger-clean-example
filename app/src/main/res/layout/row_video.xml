<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    style="@style/AppTheme.Video">

    <TextView
        android:id="@+id/tv_label"
        style="@style/AppTheme.Video.Label.Red"
        />

    <ImageView
        android:id="@+id/iv_play"
        style="@style/AppTheme.Video.PlayButton"
        />

    <ImageView
        android:id="@+id/iv_thumbnail"
        style="@style/AppTheme.Video.Thumbnail"
        />

    <TextView
        android:id="@+id/tv_title"
        style="@style/AppTheme.Video.Title"
        android:layout_toLeftOf="@+id/tv_label"
        android:layout_toRightOf="@+id/iv_thumbnail"
        android:layout_alignTop="@+id/tv_label"
        />

    <TextView
        android:id="@+id/tv_description"
        style="@style/AppTheme.Video.Description"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"/>

    <View
        android:id="@+id/separator"
        style="@style/AppTheme.Video.Divider"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/iv_thumbnail"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

</RelativeLayout>
